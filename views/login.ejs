<% include ./partials/header %>

<div class="row">
    <div class="col-md-12 form-signin">
    <h1 class="h1 font-weight-normal text-center">Please sign in</h1>
        <form action="/login" method="POST">
            <div class="form-group">
            <label for="username"></label>
                <input class="form-control form-username" type="text" id="username" name="username" placeholder="username">
            </div>
            <div class="form-group">
            <label for="password"></label>
                <input class="form-control form-fields" type="password" id="password" name="password" placeholder="password" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block btn-top">Login</button>
            </div>
            <a class="text-left" href="/campgrounds">Go Back</a>
            <a class="float-right" href="/forgot">Forgot Password</a>

        </form>
    </div>
</div>
<% include ./partials/footer %>
